{
  "manifest_version": 3,
  "name": "SnapStash",
  "version": "1.0",
  "description": "Save items to your shopping list.",
  "permissions": ["activeTab", "storage", "tabs"],
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  }
}
 